<h1>Burgers Restaurant</h1>


<h2 id="readyH2">Burgers Ready!</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <div style="display: flex;">

        <p class="burgerText"> {{this.burger_name}}</p>
        <button class="devour" id={{this.id}}>Devour</button>

    </div>

    {{/unless}}
    {{/each}}
</ul>

<h2 id="devouredH2">Burgers Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <p class="burgerText"> {{this.burger_name}}</p>
    {{/if}}



    {{/each}}
</ul>

<h2 id="newH2">Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burgertext" id="burgerLabel">Name:</label>
        <input type="text" id="burgerText" name="name">
    </div>


    <button type="submit" id="submit">Add</button>
</form>