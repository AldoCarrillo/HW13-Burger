<h1>Burguers!</h1>

<h2>Burgers Ready!</h2>

<ul>
    {{#each burguers}}
    {{#unless this.devoured}}
    <p><span class="label">Name:</span> {{this.burguer_name}}</p>
    <button class="devour" id={{this.id}}>Devour Burguer</button>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burguers Devoured!</h2>

<ul>
    {{#each burguers}}
    {{#if this.devoured}}
    <p><span class="label">Name:</span> {{this.burguer_name}}</p>
    {{/if}}



    {{/each}}
</ul>

<h2>Add a Burguer</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burgertext">Burguer Name:</label>
        <input type="text" id="burgerText" name="name">
    </div>


    <button type="submit">Add Burguer</button>
</form>